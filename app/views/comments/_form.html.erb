<%= form_with model: [article, article.comments.build] do |form| %>
  <p>
    <%= form.label :commenter %><br>
    <%= form.text_field :commenter %>
  </p>
  <p>
    <%= form.label :body %><br>
    <%= form.text_area :body %>
  </p>
  <p>
    <%= form.submit class: 'bg-sky-500 px-4 py-2 text-white rounded' %>
  </p>
<% end %>
